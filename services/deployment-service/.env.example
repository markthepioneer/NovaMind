# Server Configuration
PORT=3003
NODE_ENV=development

# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/novamind

# Kubernetes Configuration
KUBERNETES_NAMESPACE=novamind

# AWS Configuration (for Lambda deployments)
AWS_REGION=us-east-1
LAMBDA_EXECUTION_ROLE=arn:aws:iam::123456789012:role/NovaMindLambdaRole
LAMBDA_CODE_BUCKET=novamind-agent-code

# API Configuration
API_BASE_URL=https://api.novamind.ai

# Logging
LOG_LEVEL=info

# Security
JWT_SECRET=your_jwt_secret

# Cost Configuration
# These would be tuned based on your actual costs
COMPUTE_COST_PER_MS=0.00000008
INPUT_TOKEN_COST=0.0000015
OUTPUT_TOKEN_COST=0.000002

# Agent Runtime Configuration
AGENT_RUNTIME_IMAGE=novamind/agent-runtime:latest

# Prometheus Metrics (for monitoring)
ENABLE_PROMETHEUS=true
PROMETHEUS_PORT=9090

# Billing Configuration
BILLING_PROCESS_DAY=1  # Day of month to process billing
